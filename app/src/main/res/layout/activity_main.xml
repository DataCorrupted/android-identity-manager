<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generate_identity"
        android:id="@+id/generateIdentity"
        android:onClick="generateIdentity" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trace_identity"
        android:id="@+id/traceIdentities"
        android:onClick="traceIdentities" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/debug_button"
        android:id="@+id/button"
        android:onClick="debugBtnClick"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
