<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ndn.jwtan.identitymanager.UICreateOpenmHealthIDRequestSent">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/step4ImageView"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/step4IdName"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="id name"
            android:textColor="#444444" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/step4Email"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="email"
            android:textColor="#444444" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/token_success"
            android:id="@+id/step4Hint"
            android:textSize="24sp"
            android:textStyle="italic"
            android:layout_gravity="center_horizontal" />

        <!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/email_confirmation_hint"
                    android:layout_gravity="center" />
        -->
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return"
        android:id="@+id/returnBtn"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="returnClick" />

</FrameLayout>
